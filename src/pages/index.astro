---
import IndexLayout from '@/layouts/IndexLayout.astro'
import About from '@/components/widgets/About.astro'
import PostList from '@/components/widgets/PostList.astro'
import TagFilter from '@/components/widgets/TagFilter.astro'
import Friends from '@/components/widgets/Friends.astro'
import { themeConfig } from '@/config'
import { getSortedFilteredPosts } from '@/utils/draft'

const posts = await getSortedFilteredPosts()
---

<IndexLayout title={themeConfig.site.title} description={themeConfig.site.description}>
  <About />

  <!-- 主要内容区域：两栏布局 -->
  <div class="main-content">
    <!-- 左侧：文章区域 -->
    <div class="posts-section">
      <div class="section-header">
        <h2 class="section-title">最近文章</h2>
        <span class="post-count">{posts.length} 篇文章</span>
      </div>

      <TagFilter posts={posts} />

      <main>
        <PostList posts={posts} />
      </main>
    </div>

    <!-- 右侧：友链区域 -->
    <aside class="friends-section">
      <Friends maxDisplay={4} showCategories={false} />
    </aside>
  </div>
</IndexLayout>

<style>
  .main-content {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 3rem;
    margin-top: 1rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border);
  }

  .section-title {
    font-size: var(--font-size-l);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin: 0;
  }

  .post-count {
    font-size: var(--font-size-s);
    color: var(--text-secondary);
    opacity: 0.8;
  }

  .posts-section {
    min-width: 0; /* 防止 grid 子项溢出 */
  }

  .friends-section {
    position: relative;
  }

  /* 让友链区域在大屏幕上粘性定位 */
  @media (min-width: 1024px) {
    .friends-section {
      position: sticky;
      top: 7rem;
      height: fit-content;
    }
  }

  /* 平板适配 */
  @media (max-width: 1023px) {
    .main-content {
      grid-template-columns: 1fr 240px;
      gap: 2rem;
    }
  }

  /* 移动端：改为单列布局 */
  @media (max-width: 768px) {
    .main-content {
      display: block;
    }

    .posts-section {
      margin-bottom: 3rem;
    }

    .friends-section {
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border);
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
  }
</style>
